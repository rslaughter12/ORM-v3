  <section class="section">
    <div class="container is-max-desktop">
      <h1 class="title has-text-centered">Create a New Post</h1>
      <form id="post-form">
        <div class="field">
          <label class="label">Post Title</label>
          <div class="control">
            <input class="input has-background-dark has-text-white" id="post-title" type="text" name="title" placeholder="Enter post title">
          </div>
        </div>
        <div class="field">
          <label class="label">Post Content</label>
          <div class="control">
            <textarea class="textarea has-background-dark has-text-white" id="post-content" name="content" placeholder="Enter post content"></textarea>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button class="button is-primary is-small" type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </section>
<p id="post-error"></p>
    <section class="section">
    <div class="container is-max-desktop">
      <h1 class="title has-text-centered">Posts</h1>
      <div class="columns is-multiline">
        {{#each posts}}
        <div class="column">
          <div class="card">
            <div class="card-content">
                <div class="media">
                <div class="media-content">
                  <p class="title is-4">{{this.title}}</p>
                </div>
              </div>
              <div class="content">
                {{this.content}}
              </div>
            </div>
            <footer class="card-footer">
              <a class="card-footer-item delete-button" onclick="deletePost('{{this.id}}')">Delete</a>
            </footer>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  <script>
    function deletePost(postId) {
      if (confirm('Are you sure you want to delete this post?')) {
        fetch('/posts/' + postId, {
          method: 'DELETE',
        })
          .then(() => {
            location.reload(); // Reload the page after successful deletion
          })
          .catch((error) => {
            console.error('Error deleting post:', error);
          });
      }
    }
  </script>
