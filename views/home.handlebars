<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content has-text-centered"> <!-- Add 'has-text-centered' class -->
        <h2 class="title has-text-white">TECH BLOG</h2>
      </div>
    </div>
  </div>
</section>

  <section class="section">
    <div class="container">
      <div class="card">
        <div class="card-content">
          <h2 class="title has-text-white">Introduction</h2>
          <p class="subtitle has-text-white">
            Welcome to our Tech Blog! Explore the latest trends, insights, and discussions in the world of technology. Please log in to post and see what people are talking about! Don't have an account? Sign up today! 
          </p>
        </div>
      </div>
    </div>
  </section>


  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column is-half">
          <div class="card">
            <div class="card-content">
              <h2 class="title has-text-white">Sign Up</h2>
              {{!-- <form action="/users/signup" method="POST"> --}}
              <form id="signup-form">
                <div class="field">
                  <label class="label has-text-white" for="username">Username:</label>
                  <div class="control">
                    <input class="input" type="text" id="signup-username" name="username" required>
                  </div>
                </div>
                <div class="field">
                  <label class="label has-text-white" for="email">Email:</label>
                  <div class="control">
                    <input class="input" type="email" id="signup-email" name="email" required>
                  </div>
                </div>
                <div class="field">
                  <label class="label has-text-white" for="password">Password:</label>
                  <div class="control">
                    <input class="input" type="password" id="signup-password" name="password" required>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <button class="button is-primary" type="submit">Sign Up</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="column is-half">
          <div class="card">
            <div class="card-content">
              <h2 class="title has-text-white">Sign In</h2>
              {{#if error}}
                <div class="notification is-danger">
                  {{error}}
                </div>
              {{/if}}
              {{!-- action="/users/signin" method="POST" --}}
              <form id="login-form">
                <div class="field">
                  <label class="label has-text-white" for="email">Email:</label>
                  <div class="control">
                    <input class="input" type="email" id="login-email" name="email" required>
                  </div>
                </div>
                <div class="field">
                  <label class="label has-text-white" for="password">Password:</label>
                  <div class="control">
                    <input class="input" type="password" id="login-password" name="password" required>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <button class="button is-primary" type="submit">Sign In</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <p id="login-error"></p>
<script src="/login.js"></script>

